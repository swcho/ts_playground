    "version": "0.2.0",
    "configurations": [
        {
            "type": "chrome",
            "request": "launch",
            "name": "Launch Chrome",
            "url": "http://0.0.0.0:9000/canvas/linear_feedback/",
            // "webRoot": "${workspaceRoot}/out/client",
            "webRoot": "${workspaceRoot}/src/client/apps",
            // Note: These are the mappings that are included by default out of the box, with examples of how they could be resolved in different scenarios. These are not mappings that would make sense together in one project.
            // webRoot = /Users/me/project
            "runtimeExecutable": "/Applications/Google Chrome Canary.app/Contents/MacOS/Google Chrome Canary",
            "sourceMapPathOverrides": {
                "webpack:///./~/*": "${webRoot}/node_modules/*", // Example: "webpack:///./~/querystring/index.js" -> "/Users/me/project/node_modules/querystring/index.js"
                "webpack:///./*": "${webRoot}/*", // Example: "webpack:///./src/app.js" -> "/Users/me/project/src/app.js",
                "webpack:///*": "*", // Example: "webpack:///project/app.ts" -> "/project/app.ts"
                "webpack:///src/*": "${webRoot}/*", // Example: "webpack:///src/app.js" -> "/Users/me/project/app.js"
                "meteor://ðŸ’»app/*": "${webRoot}/*" // Example: "meteor://ðŸ’»app/main.ts" -> "/Users/me/project/main.ts"
            },
            "trace": "verbose"
        },
        {
            "type": "node",
            "request": "launch",
            "name": "grunt",
            "program": "${env.GRUNT}",
            "args": [
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "grunt dist",
            "program": "${env.GRUNT}",
            "args": [
                "dist"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack",
            "program": "${workspaceRoot}/node_modules/webpack/bin/webpack.js",
            "args": [
                "--config",
                "out/tasks/webpack.config.dev.js"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "webpack-dev-server",
            "program": "${workspaceRoot}/node_modules/webpack-dev-server/bin/webpack-dev-server.js",
            "args": [
                "--config",
                "out/tasks/webpack.config.dev.js"
            ],
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "program": "${workspaceRoot}/index.js",
            "cwd": "${workspaceRoot}",
            "outFiles": []
        },
        {
            "type": "node",
            "request": "attach",
            "name": "Attach to Process",
            "port": 5858,
            "outFiles": []
        }
    ]
}